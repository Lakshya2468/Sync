{
  "manifest_version": 3,
  "name": "Sync Video Extension",
  "version": "1.0.0",
  "description": "Sync video playback across multiple users in real-time",
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.netflix.com/*",
    "*://*.primevideo.com/*",
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sync Video"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.primevideo.com/*",
        "*://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
